---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

{% assign hide_page_title = page.hide_title | default: false %}
{% assign page_description = page.description | to_s | strip %}
{% comment %} Avoid assigning via a comparison expression (older Liquid flavors choke on this). {% endcomment %}
{% if page_description != '' %}
  {% assign show_description = true %}
{% else %}
  {% assign show_description = false %}
{% endif %}

<div class="post{% if hide_page_title %} post--no-title{% endif %}">

  {% unless hide_page_title %}
    <header class="post-header">
      <h1 class="post-title"{% if page.toc and page.toc.hide_title %} data-toc-skip{% endif %}>{{ page.title }}</h1>
      {% if show_description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>
  {% endunless %}

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
